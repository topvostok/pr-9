<Window x:Class="pr9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr9"
        mc:Ignorable="d"
        Title="Воинская система" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button x:Name="btnCreateLightWarrior" Content="Создать легкого воина" 
                    Click="btnCreateLightWarrior_Click" Margin="5" Padding="10"/>
            <Button x:Name="btnCreateHeavyWarrior" Content="Создать тяжелого воина" 
                    Click="btnCreateHeavyWarrior_Click" Margin="5" Padding="10"/>
            <Button x:Name="btnAttack" Content="Атаковать (10 урона)" 
                    Click="btnAttack_Click" Margin="5" Padding="10" Background="LightCoral"/>
        </StackPanel>

        <Border Grid.Row="1" Background="LightBlue" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <Canvas x:Name="warriorCanvas">
                <!-- Здесь будут отображаться воины -->
            </Canvas>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <TextBlock x:Name="tbStatus" Text="Создайте воина для начала" 
                      FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>